{
  "actions": [
    {
      "commands": [
        "/bin/sh",
        "-c",
        "mkdir -v /data/${SAMPLE}_${DB} > /data/pipeline_fastq_clean_${SAMPLE}_${DB}.log 2>&1"
      ],
      "imageUri": "google/cloud-sdk:slim",
      "mounts": [
        {
          "disk": "gcloud-shared",
          "path": "/data"
        }
      ]
    },
    {
      "commands": [
        "/bin/sh",
        "-c",
        "gsutil -q cp gs://cbb-research-dl-blastdb-v5/BOTO_CONFIG /data/.boto >> /data/pipeline_fastq_clean_${SAMPLE}_${DB}.log 2>&1"
      ],
      "imageUri": "google/cloud-sdk:slim",
      "mounts": [
        {
          "disk": "gcloud-shared",
          "path": "/data"
        }
      ]
    },
    {
      "commands": [
        "/bin/sh",
        "-c",
        "BOTO_PATH=/data/.boto gsutil -q -m -o 'GSUtil:parallel_composite_upload_threshold=150M' -o 'GSUtil:parallel_process_count=16' -o 'GSUtil:parallel_thread_count=16' cp -r gs://${BLASTBUCKET}/${DB} /data/ >> /data/pipeline_fastq_clean_${SAMPLE}_${DB}.log 2>&1"
      ],
      "imageUri": "google/cloud-sdk:slim",
      "mounts": [
        {
          "disk": "gcloud-shared",
          "path": "/data"
        }
      ]
    },
    {
      "commands": [
        "/bin/sh",
        "-c",
        "gsutil -q -m -o 'GSUtil:parallel_composite_upload_threshold=150M' cp gs://${INBUCKET}/${SAMPLE}.fsa.gz /data/ >> /data/pipeline_fastq_clean_${SAMPLE}_${DB}.log 2>&1",
      ],
      "imageUri": "google/cloud-sdk:slim",
      "mounts": [
        {
          "disk": "gcloud-shared",
          "path": "/data"
        }
      ],
      "alwaysRun": true
    },
    {
      "commands": [
        "/bin/sh",
        "-c",
        "cwltool --no-container --beta-conda-dependencies --beta-dependencies-directory / --on-error continue --tmpdir-prefix /data/ --tmp-outdir-prefix /data/ --outdir /data/${SAMPLE}_${DB} https://raw.githubusercontent.com/ncbi/cwl-ngs-workflows-cbb/master/workflows/Contamination/contamination-foreign-chromosome-blastn.cwl --blastdb /data/${DB} --blastdb_name ${DB}.fsa --threads ${CPUs} --perc_identity ${PERCENT_IDENTITY} --trans_fsa_gz /data/${SAMPLE}.fsa.gz >> /data/pipeline_fastq_clean_${SAMPLE}_${DB}.log 2>&1"
      ],
      "imageUri": "gcr.io/cbb-research-dl/cwltool",
      "mounts": [
        {
          "disk": "gcloud-shared",
          "path": "/data"
        }
      ],
      "alwaysRun": true
    },
    {
      "commands": [
        "/bin/sh",
        "-c",
        "gsutil -q -m -o 'GSUtil:parallel_composite_upload_threshold=150M' cp /data/${SAMPLE}_${DB}/* gs://${OUTBUCKET}/ >> /data/pipeline_fastq_clean_${SAMPLE}_${DB}.log 2>&1"
      ],
      "imageUri": "google/cloud-sdk:slim",
      "mounts": [
        {
          "disk": "gcloud-shared",
          "path": "/data"
        }
      ],
      "alwaysRun": true
    },
    {
      "commands": [
        "/bin/sh",
        "-c",
        "gsutil -q cp /data/pipeline_fastq_clean_${SAMPLE}_${DB}.log gs://${OUTBUCKET}/"
      ],
      "imageUri": "google/cloud-sdk:slim",
      "mounts": [
        {
          "disk": "gcloud-shared",
          "path": "/data"
        }
      ],
      "alwaysRun": true
    }
  ],
  "environment": {
    "CPUs": "16"
  },
  "resources": {
    "virtualMachine": {
      "bootDiskSizeGb": 60,
      "bootImage": "projects/cos-cloud/global/images/family/cos-stable",
      "disks": [
        {
          "name": "gcloud-shared",
          "sizeGb": 375,
          "type":"local-ssd"
        }
      ],
      "machineType": "n1-standard-16",
      "preemptible": true,
      "serviceAccount": {
        "email": "default",
        "scopes": [
          "https://www.googleapis.com/auth/cloud-platform"
        ]
      }
    },
    "zones": [
      "us-east1-c"
    ]
  }
}
