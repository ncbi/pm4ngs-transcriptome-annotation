{
  "actions": [
    {
      "commands": [
        "/bin/sh",
        "-c",
        "mkdir -v /data/${SRA} > /data/pipeline.log 2>&1"
      ],
      "imageUri": "google/cloud-sdk:slim",
      "mounts": [
        {
          "disk": "gcloud-shared",
          "path": "/data"
        }
      ]
    },
    {
      "commands": [
        "/bin/sh",
        "-c",
        "gsutil -m -q cp gs://${INBUCKET}/transcriptome.fsa /data/ >> /data/pipeline.log 2>&1"
      ],
      "imageUri": "google/cloud-sdk:slim",
      "mounts": [
        {
          "disk": "gcloud-shared",
          "path": "/data"
        }
      ]
    },
{% if cookiecutter.sequencing_technology == 'paired-end' %}
    {
      "commands": [
        "/bin/sh",
        "-c",
        "gsutil -m -o 'GSUtil:parallel_composite_upload_threshold=150M' -o 'GSUtil:parallel_process_count=16' -o 'GSUtil:parallel_thread_count=16' cp gs://${INBUCKET}/${SRA}_clean_noCont_1.fastq.gz /data/ >> /data/pipeline.log 2>&1"
      ],
      "imageUri": "google/cloud-sdk:slim",
      "mounts": [
        {
          "disk": "gcloud-shared",
          "path": "/data"
        }
      ]
    },
    {
      "commands": [
        "/bin/sh",
        "-c",
        "gsutil -m -o 'GSUtil:parallel_composite_upload_threshold=150M' -o 'GSUtil:parallel_process_count=16' -o 'GSUtil:parallel_thread_count=16' cp gs://${INBUCKET}/${SRA}_clean_noCont_2.fastq.gz /data/ >> /data/pipeline.log 2>&1"
      ],
      "imageUri": "google/cloud-sdk:slim",
      "mounts": [
        {
          "disk": "gcloud-shared",
          "path": "/data"
        }
      ]
    },
    {
      "commands": [
        "/bin/bash",
        "-c",
        "cwltool --no-container --beta-conda-dependencies --beta-dependencies-directory / --on-error continue --tmpdir-prefix /data/ --tmp-outdir-prefix /data/ --outdir /data/${SRA} https://raw.githubusercontent.com/ncbi/cwl-ngs-workflows-cbb/master/workflows/Annotation/transcriptome-read-assignment-bowtie2.cwl --genome_fasta /data/transcriptome.fsa --fastq1 /data/${SRA}_clean_noCont_1.fastq.gz --fastq2 /data/${SRA}_clean_noCont_2.fastq.gz --threads 16  >> /data/pipeline.log 2>&1"
      ],
      "imageUri": "gcr.io/cbb-research-dl/cwltool",
      "mounts": [
        {
          "disk": "gcloud-shared",
          "path": "/data"
        }
      ]
    },
{% else %}
    {
      "commands": [
        "/bin/sh",
        "-c",
        "gsutil -m -o 'GSUtil:parallel_composite_upload_threshold=150M' -o 'GSUtil:parallel_process_count=16' -o 'GSUtil:parallel_thread_count=16' cp gs://${INBUCKET}/${SRA}_clean_noCont.fastq.gz /data/ >> /data/pipeline.log 2>&1"
      ],
      "imageUri": "google/cloud-sdk:slim",
      "mounts": [
        {
          "disk": "gcloud-shared",
          "path": "/data"
        }
      ]
    },
    {
      "commands": [
        "/bin/bash",
        "-c",
        "cwltool --no-container --beta-conda-dependencies --beta-dependencies-directory / --on-error continue --tmpdir-prefix /data/ --tmp-outdir-prefix /data/ --outdir /data/${SRA} https://raw.githubusercontent.com/ncbi/cwl-ngs-workflows-cbb/master/workflows/Annotation/transcriptome-read-assignment-bowtie2.cwl --genome_fasta /data/transcriptome.fsa --fastq1 /data/${SRA}_clean_noCont.fastq.gz --threads 16  >> /data/pipeline.log 2>&1"
      ],
      "imageUri": "gcr.io/cbb-research-dl/cwltool",
      "mounts": [
        {
          "disk": "gcloud-shared",
          "path": "/data"
        }
      ]
    },
{% endif %}
    {
      "commands": [
        "/bin/sh",
        "-c",
        "gsutil -m -o 'GSUtil:parallel_composite_upload_threshold=150M' cp -R /data/${SRA} gs://${OUTBUCKET}/ >> /data/pipeline.log 2>&1"
      ],
      "imageUri": "google/cloud-sdk:slim",
      "mounts": [
        {
          "disk": "gcloud-shared",
          "path": "/data"
        }
      ],
      "alwaysRun": true
    },
    {
      "commands": [
        "/bin/sh",
        "-c",
        "gsutil cp /data/pipeline.log gs://${OUTBUCKET}/${SRA}/"
      ],
      "imageUri": "google/cloud-sdk:slim",
      "mounts": [
        {
          "disk": "gcloud-shared",
          "path": "/data"
        }
      ],
      "alwaysRun": true
    }
  ],
  "environment": { },
  "resources": {
    "virtualMachine": {
      "bootDiskSizeGb": 60,
      "bootImage": "projects/cos-cloud/global/images/family/cos-stable",
      "disks": [
        {
          "name": "gcloud-shared",
          "sizeGb": 375,
          "type":"local-ssd"
        }
      ],
      "machineType": "n1-standard-16",
      "preemptible": true,
      "serviceAccount": {
        "email": "default",
        "scopes": [
          "https://www.googleapis.com/auth/cloud-platform"
        ]
      }
    },
    "zones": [
      "us-east4-c"
    ]
  }
}